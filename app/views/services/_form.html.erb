<div class="container">
<%= form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name ,class:"form-control",placeholder:"name", required:true %>
  </div>
  <div class="form-group">
    <%= f.label :details %><br>
    <%= f.text_area :details ,class:"form-control",placeholder:"details", required:true %>
  </div> 
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image , class:"form-control" ,required:true %>
  </div>
  <div class="form-group">
    <%= f.label :support_required %><br>
    <%= f.text_field :support_required ,class:"form-control",placeholder:"support_required" %>
  </div>
  <div class="form-group">
    <%= f.label :minimum_feature_detail %><br>
    <%= f.text_field :minimum_feature_detail ,class:"form-control",placeholder:"minimum_feature_detail" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price ,class:"form-control",placeholder:"price" %>
  </div>
  
  <div class="form-group">
    <%= f.label :file_upload %><br>
    <%= f.file_field :file_upload ,class:"form-control" %>
     </div>
     <div class="form-group">
    <%= f.label :address_map %><br>
    <%= f.text_field :address_map, class:"form-control",placeholder:"map", required:true %>
  </div>

  </div>
  <div class="actions">
    <%= f.submit "new service ", class:"btn btn-info" %>
  </div>
<% end %>
</div>